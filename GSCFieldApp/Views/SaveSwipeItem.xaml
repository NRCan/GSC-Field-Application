<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GSCFieldApp.Views.SaveSwipeItem"
             xmlns:local="clr-namespace:GSCFieldApp.Services">
    <ContentView.Resources>
        <ControlTemplate x:Key="SaveSwipeControl">
            <SwipeView Threshold="110">
                <SwipeView.LeftItems>
                    <SwipeItems Mode="Execute">
                        <SwipeItem x:Name="ButtonSaveStay" Text="{local:Localize ButtonSaveStay}" BackgroundColor="{TemplateBinding ButtonColor}"
                            Command="{Binding SaveStayCommand}"/>
                    </SwipeItems>
                </SwipeView.LeftItems>

                <SwipeView.RightItems>
                    <SwipeItems Mode="Execute">
                        <SwipeItem x:Name="ButtonSaveDelete" Text="{local:Localize ButtonSaveDelete}" BackgroundColor="{StaticResource Gray500}" 
                            Command="{Binding SaveDeleteCommand}"/>
                    </SwipeItems>
                </SwipeView.RightItems>

                <Button Text="{local:Localize ButtonSave}" Style="{StaticResource FieldAppButonSave}" BackgroundColor="{TemplateBinding ButtonColor}"
                    Command="{Binding SaveCommand}"/>
            </SwipeView>
        </ControlTemplate>
    </ContentView.Resources>

</ContentView>
