<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GSCFieldApp.Views.FieldBookPage"
             xmlns:local="clr-namespace:GSCFieldApp.Services"
             xmlns:viemodel="clr-namespace:GSCFieldApp.ViewModel"
             x:DataType="viemodel:FieldBookViewModel"
             Shell.BackgroundColor="{StaticResource Secondary}"
             Title="{local:Localize FieldBookPageTitle}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}" />
    </Shell.BackButtonBehavior>
    
    <ContentPage.Content>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <ScrollView Orientation="Vertical" Grid.Row="1">

                <FlexLayout AlignItems="Start" Direction="Row" Wrap="Wrap" VerticalOptions="Fill" HorizontalOptions="Fill" >
                
                    <!--Description section-->
                    <Frame BorderColor="{StaticResource Secondary}" Style="{StaticResource FieldAppSectionFrame}">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource FieldAppTitle}"  Text="{local:Localize FieldBookPageDescriptionTitle}"/>

                            <Picker Title="{local:Localize FieldBookPageWorkType}"/>

                            <VerticalStackLayout>
                                <Label Text="{local:Localize FieldBookPageProject}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Placeholder="{local:Localize FieldBookPageProjectPlaceholder}"
                                       Text="{Binding Model.ProjectName}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout>
                                <Label Text="{local:Localize FieldBookPageActivty}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Placeholder="{local:Localize FieldBookPageActivtyPlaceholder}"
                                       Text="{Binding Model.MetadataActivity}"/>
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                    
                    <!--Project chief section-->
                    <Frame BorderColor="{StaticResource Secondary}" Style="{StaticResource FieldAppSectionFrame}">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource FieldAppTitle}" Text="{local:Localize FieldBookPageProjectTitle}"/>

                            <VerticalStackLayout>
                                <Label Text="{local:Localize FieldBookPageChiefFName}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Text="{Binding Model.ProjectLeader_FN}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout>
                                <Label Text="{local:Localize FieldBookPageChiefMName}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Text="{Binding Model.ProjectLeader_MN}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout >
                                <Label Text="{local:Localize FieldBookPageChiefLName}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Text="{Binding Model.ProjectLeader_LN}"/>
                            </VerticalStackLayout>


                        </VerticalStackLayout>
                    </Frame>
                    
                    <!--Geologist section-->
                    <Frame BorderColor="{StaticResource Secondary}" Style="{StaticResource FieldAppSectionFrame}">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource FieldAppTitle}" Text="{local:Localize FieldBookPageGeologistTitle}"/>

                            <VerticalStackLayout>
                                <Label Text="{local:Localize FieldBookPageChiefFName}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Text="{Binding Model.ProjectUser_FN}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout>
                                <Label Text="{local:Localize FieldBookPageChiefMName}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Text="{Binding Model.ProjectUser_MN}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout >
                                <Label Text="{local:Localize FieldBookPageChiefLName}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Text="{Binding Model.ProjectUser_LN}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout >
                                <Label Text="{local:Localize FieldBookPageOfficerCode}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry x:Name="FieldBookPageOfficerCode" Placeholder="{local:Localize FieldBookPageOfficerCodePlaceholder}" 
                                       Text="{Binding Model.UserCode}"
                                       TextChanged="FieldBookPageOfficerCode_TextChanged" />
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                    
                    <!--Other section-->
                    <Frame BorderColor="{StaticResource Secondary}" Style="{StaticResource FieldAppSectionFrame}">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource FieldAppTitle}" Text="{local:Localize FieldBookPageOtherTitle}"/>

                            <VerticalStackLayout>
                                <Label Text="{local:Localize FieldBookPageSSN}" Style="{StaticResource FieldAppEntryTitle}"/>
                                <Entry Keyboard="Numeric" Text="{Binding Model.StationStartNumber}" Placeholder="1"/>
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </Frame>

                    <!--Notes section-->
                    <Frame BorderColor="{StaticResource Secondary}" Style="{StaticResource FieldAppSectionFrame}">
                        <VerticalStackLayout>
                            <Label Style="{StaticResource FieldAppTitle}" Text="{local:Localize GenericNoteTitle}"/>

                            <VerticalStackLayout>
                                <Editor Style="{StaticResource FieldAppEditorNotes}" Text="{Binding Model.MetadataNotes}"/>
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                    
                </FlexLayout>

            </ScrollView>

            <Button x:Name="FieldBookSaveButton" Text="{local:Localize ButtonSave}" Style="{StaticResource FieldAppButonSave}" Grid.Row="2"
                    Command="{Binding ValidateAndSaveCommand}"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>