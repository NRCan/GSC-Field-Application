<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GSCFieldApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GSCFieldApp"
    Shell.FlyoutBehavior="Flyout" >

    <ShellContent
            Title="GSC Field App"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    <MenuItem Text="Map" Command="{Binding NavigateToMapCommand}"/>

    <MenuItem Text="Field Notes" Command="{Binding NavigateToFieldNotesCommand}"/>

    <MenuItem Text="Quick Backup" Command="{Binding DoBackupCommand}" />

    <MenuItem Text="Field Books" Command="{Binding NavigateToFieldBooksCommand}"/>

    <MenuItem Text="Settings" Command="{Binding NavigateToSettingsCommand}" />
        
</Shell>
