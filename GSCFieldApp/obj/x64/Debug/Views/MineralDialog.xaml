<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.MineralDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:themes="using:GSCFieldApp.Themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    mc:Ignorable="d">

    <!-- data entry -->
    <Page>

        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

            <Controls:PageHeader x:ConnectionId='2' x:Name="pageHeader" x:Uid="MineralDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" Background="{ThemeResource FieldMineralColorBrush}"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='21' x:Name="mineralBackButton" Icon="Clear" Foreground="White"                                    />
                    <AppBarButton x:ConnectionId='22' x:Name="mineralSaveButton" Icon="Save" Foreground="White"                                    />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='3' x:Name="pageFooter" Background="{ThemeResource FieldMineralColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='4' Style="{StaticResource ParentPanel}" x:Name="mineralRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='5' Style="{StaticResource ChildPanel}" x:Name="mineralScrollRelativePanel">
                        <GridView x:ConnectionId='6' Style="{StaticResource NonselectableGridView}" x:Name="MineralGridView_01">
                            <ComboBox x:ConnectionId='19' x:Name="MineralNamesComboBox" x:Uid="MineralDialogMinerals" Style="{ThemeResource ComboboxMandatoryField}"
                                Header="" 
                                                                             
                                                                                                   />

                            <ComboBox x:ConnectionId='20' x:Name="MineralModeBox" x:Uid="MinderalDialogMode" Style="{ThemeResource ComboboxMandatoryField}"
                                                                                      
                                                                                                                                                                                   />
                        </GridView>

                        <TextBlock x:ConnectionId='7' x:Name="ModeDynamicLabel" x:Uid="MineralResidualLabel"                                                            RelativePanel.Below="MineralGridView_01"/>

                        <Rectangle x:ConnectionId='8' Style="{StaticResource Horizontal}" x:Name="MainSeparator_01"
                           RelativePanel.Below="ModeDynamicLabel"
                           Fill="{ThemeResource FieldMineralColorBrush}" />

                        <GridView x:ConnectionId='9' Style="{StaticResource NonselectableGridView}" x:Name="MineralGridView_02" RelativePanel.Below="MainSeparator_01">
                            
                            <ComboBox x:ConnectionId='16' x:Name="MineralColourComboBox" x:Uid="MineralDialogColour"
                                Header="" 
                                                                               
                                                                                                    />

                            <TextBox x:ConnectionId='17' x:Name="MineralSizeMinNumBox" x:Uid="MinderalDialogSizeMin"
                                HorizontalAlignment="Stretch" MinWidth="20" Width="Auto"
                                InputScope="Number"
                                                                                      />

                            <TextBox x:ConnectionId='18' x:Name="MineralSizeMaxNumBox" x:Uid="MinderalDialodSizeMax"
                                HorizontalAlignment="Stretch" MinWidth="20" Width="Auto"
                                InputScope="Number"
                                                                                      />

                        </GridView>

                        <Rectangle x:ConnectionId='10' Style="{StaticResource Horizontal}" x:Name="MainSeparator_02"
                           RelativePanel.Below="MineralGridView_02"
                           Fill="{ThemeResource FieldMineralColorBrush}" />


                        <GridView x:ConnectionId='11' Style="{StaticResource NonselectableGridView}" x:Name="MineralGridView_03" RelativePanel.Below="MainSeparator_02">
                            
                            <ComboBox x:ConnectionId='13' x:Name="MineralFormComboBox" x:Uid="MineralDialogForm"
                                Header="" 
                                                                             
                                                                                                   />

                            <ComboBox x:ConnectionId='14' x:Name="MineralHabitComboBox" x:Uid="MineralDialogHabit"
                                Header="" 
                                                                              
                                                                                                    />

                            <ComboBox x:ConnectionId='15' x:Name="MineralOccurComboBox" x:Uid="MineralDialogOccur"
                                Header="" 
                                                                              
                                                                                                    />
                            
                        </GridView>


                        <TextBox x:ConnectionId='12' Style="{ThemeResource Notes}" x:Name="MineralNoteComboBox" x:Uid="MineralDialogNote"
                            RelativePanel.Below="MineralGridView_03"
                                                                              />

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>
</UserControl>

