<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.PaleoflowDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    mc:Ignorable="d">

    <Page>
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            
            <Controls:PageHeader x:ConnectionId='2' x:Name="pageHeader" x:Uid="PflowDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" 
                                 Background="{ThemeResource FieldPflowColorBrush}">
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='28' x:Name="pflowBackButton" Icon="Clear" Foreground="White"                                 />
                    <AppBarButton x:ConnectionId='29' x:Name="pflowSaveButton" Icon="Save" Foreground="White"                                 />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='3' x:Name="pageFooter" Background="{ThemeResource FieldPflowColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='4' Style="{StaticResource ParentPanel}" x:Name="pflowRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='5' Style="{StaticResource ChildPanel}" x:Name="pflowScrollRelativePanel">

                        <GridView x:ConnectionId='6' Style="{StaticResource NonselectableGridView}" x:Name="PflowGridView_01">
                            <ComboBox x:ConnectionId='25' x:Name="PflowClassCombobox" x:Uid="PflowDialogClass" Style="{ThemeResource ComboboxMandatoryField}"
                                Header="" 
                                                                             
                                                                                                                                                                              />
                            <ComboBox x:ConnectionId='26' x:Name="PflowFeatureComboBox" x:Uid="PflowDialogFeature"
                            Header=""
                                                                           
                                                                                                  />

                            <ComboBox x:ConnectionId='27' x:Name="PflowDirectionCombobox" x:Uid="PflowDialogDir" Header="" Style="{ThemeResource ComboboxMandatoryField}"
                                                                           
                                                                                                 />
                        </GridView>

                        <Rectangle x:ConnectionId='7' Style="{StaticResource Horizontal}" x:Name="MainPFlowSeparator_01"
                            RelativePanel.Below="PflowGridView_01"
                            Fill="{ThemeResource FieldPflowColorBrush}" />

                        <GridView x:ConnectionId='8' Style="{StaticResource NonselectableGridView}" x:Name="PflowGridview_02" RelativePanel.Below="MainPFlowSeparator_01">
                            <ComboBox x:ConnectionId='21' x:Name="PflowBedrockSurfaceCombobox" x:Uid="PflowDialogBedrockSurface"  
                                Header="" 
                                                                                  
                                                                                                        />
                            <ComboBox x:ConnectionId='22' x:Name="PflowConfidence" x:Uid="PflowDialogConfidence" Header=""
                                                                                  
                                                                                                        />

                            <ComboBox x:ConnectionId='23' x:Name="PflowDefinedCombobox" x:Uid="PflowDialogDefined"  
                                Header="" 
                                                                               
                                                                                                     />
                            <ComboBox x:ConnectionId='24' x:Name="PflowNoIndicatorCombobox" x:Uid="PflowDialogNoIndicator" Header=""
                                                                                   
                                                                                                         />
                        </GridView>

                        <Rectangle x:ConnectionId='9' Style="{StaticResource Horizontal}" x:Name="MainPFlowSeparator_02"
                            RelativePanel.Below="PflowGridview_02"
                            Fill="{ThemeResource FieldPflowColorBrush}" />

                        <GridView x:ConnectionId='10' Style="{StaticResource NonselectableGridView}" x:Name="PflowGridview_03" RelativePanel.Below="MainPFlowSeparator_02">

                            <TextBox x:ConnectionId='19' x:Name="PflowAzimuthNumBox" x:Uid="PflowDialogAzim"
                                HorizontalAlignment="Stretch"
                                InputScope="Number"
                                                                                  />

                            <TextBox x:ConnectionId='20' x:Name="PflowDipNumBox" x:Uid="PflowDialogDip"
                                HorizontalAlignment="Stretch" Header=""
                                InputScope="Number"
                                                                                 />

                        </GridView>
                        
                        <TextBlock x:ConnectionId='11' x:Name="PflowMainDirectionHeader" Text="" x:Uid="PflowDialogMainDirectionHeader" 
                                   RelativePanel.Below="PflowGridview_03" RelativePanel.AlignLeftWithPanel="True"/>

                        <CheckBox x:ConnectionId='12' x:Name="PflowMainDirectionCheckbox" Content="" x:Uid="PflowDialogMainDirection" 
                                                                                                 
                                RelativePanel.Below="PflowMainDirectionHeader" RelativePanel.AlignLeftWithPanel="True"/>

                        <Rectangle x:ConnectionId='13' x:Name="MainPFlowSeparator_03" Height="1" Margin="0,30,0,30"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.Below="PflowMainDirectionCheckbox"
                           Fill="{ThemeResource FieldPflowColorBrush}" />

                        <GridView x:ConnectionId='14' Style="{StaticResource NonselectableGridView}" x:Name="PflowGridview_04" RelativePanel.Below="MainPFlowSeparator_03">

                            <ComboBox x:ConnectionId='16' x:Name="PflowRelativeAgeCombobox" x:Uid="PflowDialogRelativeAge" Header=""
                                                                           
                                                                                                 />

                            <ComboBox x:ConnectionId='17' x:Name="PflowMethodCombobox" x:Uid="PflowDialogMethod"  
                                Header="" 
                                                                              
                                                                                                    />
                            <ComboBox x:ConnectionId='18' x:Name="PflowRelationCombobox" x:Uid="PflowDialogRelation" Header=""
                                                                                
                                                                                                      />

                        </GridView>

                        <TextBox x:ConnectionId='15' Style="{ThemeResource Notes}" x:Name="PflowNoteTextbox" x:Uid="PflowDialogNote"
                            RelativePanel.Below="PflowGridview_04"
                                                                              />

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>
</UserControl>

