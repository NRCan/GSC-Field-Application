<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.FossilDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    mc:Ignorable="d">

    <Page>
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Controls:PageHeader x:ConnectionId='2' x:Name="pageHeader" x:Uid="FossilDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" 
                            Background="{ThemeResource FieldFossilColorBrush}">
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='9' x:Name="fossilBackButton" Icon="Clear" Foreground="White"                                  />
                    <AppBarButton x:ConnectionId='10' x:Name="fossilSaveButton" Icon="Save" Foreground="White"                                  />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='3' x:Name="pageFooter" Background="{ThemeResource FieldFossilColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='4' Style="{StaticResource ParentPanel}" x:Name="fossilRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='5' Style="{StaticResource ChildPanel}" x:Name="fossilScrollRelativePanel">

                        <GridView x:ConnectionId='6' Style="{StaticResource NonselectableGridView}" x:Name="fossilGridView_01">
                            <ComboBox x:ConnectionId='8' x:Name="FossilClassCombobox" x:Uid="FossilDialogClass" Style="{ThemeResource ComboboxMandatoryField}"
                                                                              
                                                                                                    />
                        </GridView>

                        <TextBox x:ConnectionId='7' Style="{ThemeResource Notes}" x:Name="fossilNoteTextbox" x:Uid="FossilDialogNote"
                            RelativePanel.Below="fossilGridView_01"
                                                                                />

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>
</UserControl>

