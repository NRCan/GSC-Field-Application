<Page x:ConnectionId='1' x:Class="GSCFieldApp.Views.FieldBooksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:controls="using:Template10.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels" 
    xmlns:model="using:GSCFieldApp.Models" 
    xmlns:conv="using:GSCFieldApp.Converters"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:FieldBooksPageViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </Page.DataContext>

    <Page.Resources>
        <conv:VisibilityFromBoolConverter x:ConnectionId='3' x:Name="VisibilityFromBoolConverter" />
        <conv:ReverseBoolConverter x:ConnectionId='4' x:Name="ReverseBoolConverter" />
        <DataTemplate x:Key="ProjectListTemplate"                              >
            <RelativePanel x:ConnectionId='5' BorderBrush="#FFBDBDBD" BorderThickness="0" Margin="0">

                <Grid Margin="10" HorizontalAlignment="Left" BorderThickness="1">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" FontSize="20" x:Uid="ProjectListHeader" HorizontalAlignment="Left" Margin="3,0,0,0"/>

                    <TextBlock x:ConnectionId='6' x:Name="projectGeologist"                                              
                               HorizontalAlignment="Left" TextTrimming="WordEllipsis" Margin="25,0,0,0"
                               Grid.Column="0" Grid.Row="1"/>
                    <TextBlock x:ConnectionId='7' x:Name="projectTitle"                                                
                               HorizontalAlignment="Left" TextTrimming="WordEllipsis" Margin="25,0,0,0"
                               Grid.Column="0" Grid.Row="2"/>
                    <TextBlock x:ConnectionId='8' x:Name="projectType"                                                  
                               HorizontalAlignment="Left" TextTrimming="WordEllipsis" Margin="25,0,0,0"
                               Grid.Column="0" Grid.Row="3"/>
                    <TextBlock x:ConnectionId='9' x:Name="projectCreateDate"                                              
                               HorizontalAlignment="Left" TextTrimming="WordEllipsis" Margin="25,0,0,0"
                               Grid.Column="0" Grid.Row="4"/>

                    <TextBlock Grid.Column="0" Grid.Row="5" FontSize="20" 
                               HorizontalAlignment="Left" Margin="3,0,0,0">
                        <Run x:Uid="ProjectListStationHeader" />
                        <Run>(</Run><Run x:ConnectionId='11'                              /><Run>)</Run>
                    </TextBlock>

                    <TextBlock x:Name="projectStationNumber"  
                               HorizontalAlignment="Left" TextTrimming="WordEllipsis" Margin="25,0,0,0"
                               Grid.Column="0" Grid.Row="6">
                        <Run x:ConnectionId='10'                                   />
                        <LineBreak/>
                    </TextBlock>

                    <Image x:Uid="ProjectListLogo" Height="100" Width="100" Source="ms-appx:///Assets/gsclogo-pantone_yellow.png" Grid.Row="7" HorizontalAlignment="Center"/>

                    <Rectangle Grid.RowSpan="8" Width="2 " Grid.Column="0" Margin="-5,0,0,0"  HorizontalAlignment="Left" Fill="{StaticResource GSCHammerColorBrush}"/>

                </Grid>

            </RelativePanel>
        </DataTemplate>
    </Page.Resources>
    
    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='12' x:Name="AdaptiveVisualStateGroup">
                <VisualState x:ConnectionId='13' x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='14' x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='15' x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--  header  -->
        <controls:PageHeader x:ConnectionId='16' x:Name="projectPageHeader" Content="" x:Uid="ProjectsPageHeader"
                                                   
                             RelativePanel.AlignLeftWithPanel="True" EllipsisVisibility="Visible"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True">

            <controls:PageHeader.PrimaryCommands>
                <AppBarButton x:ConnectionId='20' x:Name="projectAddButton" Icon="Add" Foreground="White"                                                     x:Uid="ProjectAddButtonLabel"/>
                <AppBarButton x:ConnectionId='21' x:Name="projectOpenButton" Icon="Accept" Foreground="White"                                                           x:Uid="ProjectOpenButtonLabel"                                                                                                                  />
                <AppBarButton x:ConnectionId='22' x:Name="projectEditButton" Icon="Edit" Foreground="White"                                                      x:Uid="ProjectEditButtonLabel"                                                                                                                  />
                <AppBarButton x:ConnectionId='23' x:Name="projectDeleteButton" Icon="Delete" Foreground="White"                                                             x:Uid="ProjectDeleteButtonLabel"                                                                                                                  />
            </controls:PageHeader.PrimaryCommands>

            <controls:PageHeader.SecondaryCommands>
                <AppBarButton x:ConnectionId='24' x:Name="projectFullBackupButton" x:Uid="ProjectFullBackupButtonLabel" Foreground="Black" Label="Full Backup" HorizontalContentAlignment="Right"                                                                                                                                                                   />
                <AppBarButton x:ConnectionId='25' x:Name="projectRestoreButton" x:Uid="ProjectRestoreButtonLabel" Foreground="Black" Label="Restore" HorizontalContentAlignment="Right"                                                  />
                <AppBarButton x:ConnectionId='26' x:Name="projectUpgradeButton" x:Uid="ProjectUpgradeButtonLabel" Foreground="Black" Label="Upgrade" HorizontalContentAlignment="Right"                                                  />
            </controls:PageHeader.SecondaryCommands>
        </controls:PageHeader>

        <!--  content  -->
        <GridView x:ConnectionId='17' 
            RelativePanel.Below="projectPageHeader"     
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True" Margin="15" x:Name="ProjectList" Style="{StaticResource ReportPageGridView}"
                    IsSwipeEnabled="False" AllowDrop="False" ItemContainerStyle="{StaticResource ReportPageGridViewBookItems}"
                    ItemTemplate="{StaticResource ProjectListTemplate}" 
                                                                                    
                                                                                        >


        </GridView>

        <TextBlock x:ConnectionId='18' x:Uid="WatermarkNoFieldBook" 
                                                                                                                                            
                   Style="{StaticResource WatermarkText}"/>
        
        <ProgressRing x:ConnectionId='19' x:Name="FieldbookProgressRing"                                                               
                      Width="130" Height="50" 
                                                                                                                                                  
                      Padding="0" RelativePanel.AlignHorizontalCenterWithPanel="True" 
                      RelativePanel.AlignVerticalCenterWithPanel="True"/>

    </RelativePanel>

</Page>


