<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.LocationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:themes="using:GSCFieldApp.Themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    xmlns:converters="using:GSCFieldApp.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:ReverseBoolConverter x:ConnectionId='2' x:Name="ReverseBoolConverter" />
    </UserControl.Resources>

    <!-- data entry -->
    <Page>

        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


            <Controls:PageHeader x:ConnectionId='3' x:Name="pageHeader" x:Uid="LocationDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" Background="{ThemeResource FieldObsColorBrush}"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='26' x:Name="LocationBackButton" Icon="Clear" Foreground="White"                                    />
                    <AppBarButton x:ConnectionId='27' x:Name="LocationSaveButton" Icon="Save" Foreground="White"                                     />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='4' x:Name="pageFooter" Background="{ThemeResource FieldObsColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='5' Style="{StaticResource ParentPanel}" x:Name="locationRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='6' Style="{StaticResource ChildPanel}" x:Name="locationScrollRelativePanel">

                        <GridView x:ConnectionId='7' Style="{StaticResource NonselectableGridView}" 
                                    x:Name="LocationGridView_00">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="LocationDialogGridView_Datum"/>

                            <ComboBox x:ConnectionId='25' x:Name="LocationDatum" x:Uid="LocationDialogDatum" Style="{ThemeResource ComboboxMandatoryField}"
                                      Header=""                                                                                                              
                                      MinWidth="175"                                                 
                                                                                                              
                                      />

                        </GridView>

                        <Rectangle x:ConnectionId='8' Style="{StaticResource Horizontal}" x:Name="MainSeparator_00" RelativePanel.Below="LocationGridView_00"
                            Fill="{ThemeResource FieldObsColorBrush}" />

                        <GridView x:ConnectionId='9' Style="{StaticResource NonselectableGridView}" RelativePanel.Below="MainSeparator_00"
                                    x:Name="LocationGridView_01">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="LocationDialogGridView_Geo"/>
                            <TextBox x:ConnectionId='22' x:Name="LocationLat" x:Uid="LocationDialogLatitude" Header=""                                                                                                             
                                HorizontalAlignment="Stretch" Width="Auto" MinWidth="20" InputScope="Number"
                                                                                                                                                      />

                            <TextBox x:ConnectionId='23' x:Name="LocationLong" x:Uid="LocaitonDialogLongitude"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20" InputScope="Number"                                                                                                             
                                                                                                                                                       />

                            <Button x:ConnectionId='24' x:Name="ButtonConvertToUTM" Content="To UTM" Margin="0,28,0,0"
                                                              /> 

                        </GridView>

                        <Rectangle x:ConnectionId='10' Style="{StaticResource Horizontal}" x:Name="MainSeparator_01" RelativePanel.Below="LocationGridView_01"
                            Fill="{ThemeResource FieldObsColorBrush}" />

                        <GridView x:ConnectionId='11' Style="{StaticResource NonselectableGridView}" 
                                    x:Name="LocationGridView_02" RelativePanel.Below="MainSeparator_01">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="LocationDialogGridView_Projected"/>
                            <TextBox x:ConnectionId='18' x:Name="LocationNorthing" x:Uid="LocationDialogNorthing" Header=""
                                HorizontalAlignment="Stretch" Width="Auto" MinWidth="20"                                                                                                             
                                                                                                                                                      />

                            <TextBox x:ConnectionId='19' x:Name="LocationEasting" x:Uid="LocationDialogEasting"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20"                                                                                                             
                                                                                                                                                     />

                            <TextBox x:ConnectionId='20' x:Name="LocationZone" x:Uid="LocationDialogZone"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20"
                                Text =""                                                             />

                            <Button x:ConnectionId='21' x:Name="ButtonConvertToGeographic" Content="To Geographic" Margin="0,28,0,0"
                                                                     />

                        </GridView>

                        <Rectangle x:ConnectionId='12' Style="{StaticResource Horizontal}" x:Name="MainSeparator_02" RelativePanel.Below="LocationGridView_02"
                            Fill="{ThemeResource FieldObsColorBrush}" />

                        <GridView x:ConnectionId='13' Style="{StaticResource NonselectableGridView}" RelativePanel.Below="MainSeparator_02"
                                    x:Name="LocationGridView_03">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="LocationDialogGridView_Elevation"/>

                            <TextBox x:ConnectionId='17' x:Name="LocationElevation" x:Uid="LocationDialogElevation"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20"
                                                                                           InputScope="Number"/>

                        </GridView>

                        <Rectangle x:ConnectionId='14' Style="{StaticResource Horizontal}" x:Name="MainSeparator_03" RelativePanel.Below="LocationGridView_03"
                            Fill="{ThemeResource FieldObsColorBrush}" />

                        <GridView x:ConnectionId='15' Style="{StaticResource NonselectableGridView}" RelativePanel.Below="MainSeparator_03" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True"
                                    x:Name="LocationGridView_04">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="LocationDialogGridView_Extra"/>
                        </GridView>

                        <TextBox x:ConnectionId='16' Style="{ThemeResource Notes}" x:Name="LocationDialogNoteTextbox" x:Uid="LocationDialogNotes"  HorizontalAlignment="Stretch" RelativePanel.Below="LocationGridView_04"
                                                                                   Margin="0, -50, 0, 0"/>

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>
</UserControl>

