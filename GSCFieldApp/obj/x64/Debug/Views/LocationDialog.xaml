<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.LocationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:themes="using:GSCFieldApp.Themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    mc:Ignorable="d">

    <!-- data entry -->
    <Page>

        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


            <Controls:PageHeader x:ConnectionId='2' x:Name="pageHeader" x:Uid="LocationDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" Background="{ThemeResource FieldObsColorBrush}"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='14' x:Name="LocationBackButton" Icon="Clear" Foreground="White"                                    />
                    <AppBarButton x:ConnectionId='15' x:Name="LocationSaveButton" Icon="Save" Foreground="White"                                     />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='3' x:Name="pageFooter" Background="{ThemeResource FieldObsColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='4' Style="{StaticResource ParentPanel}" x:Name="locationRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='5' Style="{StaticResource ChildPanel}" x:Name="locationScrollRelativePanel">

                        <GridView x:ConnectionId='6' Style="{StaticResource NonselectableGridView}" 
                                  x:Name="LocationGridView_01">

                            <TextBox x:ConnectionId='11' x:Name="LocationLat" x:Uid="LocationDialogLatitude" Header=""
                                HorizontalAlignment="Stretch" Width="Auto" MinWidth="20"
                                                                                          IsReadOnly="True"/>

                            <TextBox x:ConnectionId='12' x:Name="LocationLong" x:Uid="LocaitonDialogLongitude"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20"
                                                                                           IsReadOnly="True"/>

                            <TextBox x:ConnectionId='13' x:Name="LocationElevation" x:Uid="LocationDialogElevation"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20"
                                                                                           InputScope="Number"/>

                        </GridView>

                        <GridView x:ConnectionId='7' Style="{StaticResource NonselectableGridView}" 
                                  x:Name="LocationGridView_02" RelativePanel.Below="LocationGridView_01">

                            <TextBox x:ConnectionId='8' x:Name="LocationNorthing" x:Uid="LocationDialogNorthing" Header=""
                                HorizontalAlignment="Stretch" Width="Auto" MinWidth="20"
                                Text ="" IsReadOnly="True"/>

                            <TextBox x:ConnectionId='9' x:Name="LocationEasting" x:Uid="LocationDialogEasting"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20"
                                Text ="" IsReadOnly="True"/>

                            <TextBox x:ConnectionId='10' x:Name="LocationZone" x:Uid="LocationDialogZone"
                                HorizontalAlignment="Stretch" Width="Auto" Header="" MinWidth="20"
                                Text ="" IsReadOnly="True"/>

                        </GridView>                        

                        
                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>
</UserControl>

