<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.PicklistDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:theme="using:GSCFieldApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:model="using:GSCFieldApp.Models"
    xmlns:Controls="using:Template10.Controls"
    xmlns:converters="using:GSCFieldApp.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>

        <converters:PicklistDescriptionConverter x:ConnectionId='2' x:Name="PicklistDescriptionConverter" />
        <converters:PicklistDefaultValueConverter x:ConnectionId='3' x:Name="PicklistDefaultValueConverter" />
        
        <!-- Picklist Value Template -->
        <DataTemplate x:Key="PiclklistValueTemplate"                                >

        <RelativePanel x:ConnectionId='4'>
            <TextBlock x:ConnectionId='5' Grid.Column="0" Foreground="#FF9B9696" x:Name="RelatedToTextBlock"
                                                                                                           
                        TextWrapping="NoWrap" FontStyle="Italic" RelativePanel.AlignLeftWithPanel="True" />
            <TextBlock x:ConnectionId='6' RelativePanel.RightOf="RelatedToTextBlock" Margin="5,0,0,0"
                                                    x:Name="DescriptionTextBlock"                                                                                             
                        TextWrapping="NoWrap" />
            <SymbolIcon x:ConnectionId='7' x:Name="PicklistValueCheck" Margin="10,0,0,0" RelativePanel.AlignRightWithPanel="True" RelativePanel.RightOf="DescriptionTextBlock" Symbol="Accept" Foreground="#FF2AD319"                                   />
        </RelativePanel>

        </DataTemplate>
    </UserControl.Resources>

        <!-- data entry -->
    <Page>
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


            <Controls:PageHeader x:ConnectionId='8' x:Name="pageHeader" BackButtonVisibility="Collapsed" x:Uid="PicklistDialogHeader" Text=""
                            RelativePanel.AlignLeftWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='23' x:Name="picklistBackButton" Icon="Clear" Foreground="White"                                         />
                    <AppBarButton x:ConnectionId='24' x:Name="picklistSaveButton" Icon="Save" Foreground="White"                                         />
                </Controls:PageHeader.PrimaryCommands>

                <!--  secondary commands  -->
                <!--<Controls:PageHeader.SecondaryCommands>
                    <AppBarButton Label="Return to default lists."/>
                    <AppBarButton Label="Return to default lists with added terms."/>
                </Controls:PageHeader.SecondaryCommands>-->

            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='9' x:Name="pageFooter"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='10' x:Name="picklistRelativePanel" 
                           RelativePanel.AlignLeftWithPanel="True" 
                           RelativePanel.AlignRightWithPanel="True" 
                           RelativePanel.Below="pageHeader" 
                           RelativePanel.Above="pageFooter">

                <ScrollViewer VerticalScrollMode="Auto" 
                          RelativePanel.AlignTopWithPanel="True"
                          RelativePanel.AlignBottomWithPanel="True"
                          RelativePanel.AlignRightWithPanel="True"
                          RelativePanel.AlignLeftWithPanel="True"
                          VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch">

                    <RelativePanel x:ConnectionId='11' x:Name="picklistScrollRelativePanel"
                    RelativePanel.AlignLeftWithPanel="True" 
                    RelativePanel.AlignRightWithPanel="True" 
                    Padding="10,5,10,0">

                        <ComboBox x:ConnectionId='12' x:Name="picklistSelector" Margin="15" x:Uid="PicklistEditorPicklists"
                                                                      
                                                                                           
                          DisplayMemberPath="itemName" 
                          SelectedValuePath="itemValue"                                                          />

                        <Rectangle x:ConnectionId='13' Style="{StaticResource Horizontal}" x:Name="MainSeparator_01" RelativePanel.Below="picklistSelector"
                           Fill="{ThemeResource CustomColorBrush}" Margin="15,0,0,0"/>

                        <ComboBox x:ConnectionId='14' x:Name="picklistAddParentTextbox" Margin="15" RelativePanel.Below="MainSeparator_01" 
                              x:Uid="PicklistEditorAddParentTerm" 
                                                                               
                                                                                             
                              DisplayMemberPath="itemName"                                                               
                              SelectedValuePath="itemValue"                                                                       />

                        <TextBox x:ConnectionId='15' x:Name="picklistAddTextbox" Margin="15" RelativePanel.Below="picklistAddParentTextbox" x:Uid="PicklistEditorUpdateTerm"                                                                       
                                                                                                                                           
                                                                                             />

                        <TextBlock x:ConnectionId='16' x:Name="picklistTermsTextbox" Margin="15,0,0,0" x:Uid="PicklistTermsTextbox" RelativePanel.Below="picklistAddTextbox"/>
                        
                        <ListView x:ConnectionId='17' x:Name="picklistValues" Height="300" Width="Auto" MinWidth="250" MaxWidth ="400" Margin="15,8,8,8" Style="{ThemeResource BorderedListView}"
                              x:Uid="PicklistEditorTerms" ScrollViewer.HorizontalScrollMode="Enabled"
                              RelativePanel.Below="picklistTermsTextbox" IsItemClickEnabled="True"                                     
                        ItemTemplate="{StaticResource PiclklistValueTemplate}"  
                                                                         
                                                                                                                                                                       SelectionMode="Extended"  CanReorderItems="True" AllowDrop="True"
                                                                                               ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

                        <TextBlock RelativePanel.Below="picklistValues" Margin="15,0,0,0">
                            <Run Text="" x:Uid="PicklistEditorDefaultBoldIcon" FontWeight="Bold"/>
                            <Run Text="  "/>
                            <Run Text="" x:Uid="PicklistEditorVisibleIcon"/>
                            <Run FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" Foreground="#FF2AD319"/>
                            <Run Text="" x:Uid="PicklistEditorHiddenIcon"/>
                            <Run FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Foreground="Red"/>
                            
                        </TextBlock>
                        
                        
                        <SymbolIcon x:ConnectionId='18' x:Name="PicklistValueDeleteIcon" Symbol="Sync"
                                        RelativePanel.AlignTopWith="picklistValues" RelativePanel.RightOf="picklistValues" 
                                        Margin="0,15"                                        />
                        <TextBlock x:ConnectionId='19' x:Name="PicklistValueDeleteName" x:Uid="PicklistEditorDeleteIcon" Margin="7,0,0,0"                                         RelativePanel.RightOf="PicklistValueDeleteIcon" RelativePanel.AlignVerticalCenterWith="PicklistValueDeleteIcon"/>
                        <SymbolIcon x:ConnectionId='20' x:Name="PicklistValueDefaultIcon" Symbol="Pin"
                                        RelativePanel.Below="PicklistValueDeleteIcon" RelativePanel.RightOf="picklistValues" 
                                        Margin="0,15"                                                             />
                        <TextBlock x:ConnectionId='21' x:Name="PicklistValueDefaultName" x:Uid="PicklistEditorDefaultIcon" Margin="7,0,0,0" RelativePanel.RightOf="PicklistValueDefaultIcon" RelativePanel.AlignVerticalCenterWith="PicklistValueDefaultIcon"                                                             />
                        <SymbolIcon x:ConnectionId='22' x:Name="PicklistValueAddIcon" Symbol="Forward" RelativePanel.AlignBottomWith="picklistAddTextbox" 
                                RelativePanel.RightOf="picklistAddTextbox" Margin="0,20"
                                                                                         />

                    </RelativePanel>

                </ScrollViewer>

            </RelativePanel>

        </RelativePanel>
    </Page>

</UserControl>

