<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.StructureDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    xmlns:conv="using:GSCFieldApp.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:String2Number x:Key="String2Number" />
    </UserControl.Resources>

    <Page>
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

            <Controls:PageHeader x:ConnectionId='2' x:Name="pageHeader" x:Uid="StructDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" 
                                 Background="{ThemeResource FieldStructureColorBrush}">
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='36' x:Name="structBackButton" Icon="Clear" Foreground="White"                                  />
                    <AppBarButton x:ConnectionId='37' x:Name="structSaveButton" Icon="Save" Foreground="White"                                  />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='3' x:Name="pageFooter" Background="{ThemeResource FieldStructureColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='4' Style="{StaticResource ParentPanel}" x:Name="strucRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='5' Style="{StaticResource ChildPanel}" x:Name="strucScrollRelativePanel">

                        <GridView x:ConnectionId='6' Style="{StaticResource NonselectableGridView}" x:Name="StructureGridView_Type">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="StructureGridView_Type"/>
                            <Button x:ConnectionId='33' x:Name="structTypeSearch" Margin="0,0,10,0" Width="35" Height="30" Background="#00000000" 
                                                          >
                                <SymbolIcon x:ConnectionId='35' x:Name="SearchLitho" Symbol="Zoom" Margin="-17.667,-15,-17.333,-15"/>
                            </Button>

                            <TextBox x:ConnectionId='34' x:Name="strucType" Margin="0,-28,50,0" Header="" x:Uid="StructDialogType" 
                                 RelativePanel.RightOf="structTypeSearch"
                                 Width="Auto" Style="{ThemeResource TextboxMandatoryField}"
                                                                                                   
                                                                      />

                        </GridView>

                        <Rectangle x:ConnectionId='7' Style="{StaticResource Horizontal}" x:Name="MainSeparator_00"
                            RelativePanel.Below="StructureGridView_Type"
                            Fill="{ThemeResource FieldStructureColorBrush}" />

                        <GridView x:ConnectionId='8' Style="{StaticResource NonselectableGridView}" x:Name="StructureGridView_01" RelativePanel.Below="MainSeparator_00">
                            <TextBox x:ConnectionId='24' x:Name="StructureAzimuthNumBox" x:Uid="StructureDialogAzim" Style="{ThemeResource TextboxMandatoryField}"
                                HorizontalAlignment="Stretch"
                                InputScope="Number"
                                                                                       
                                                                                />
                            <TextBox x:ConnectionId='25' x:Name="StructureDipNumBox" x:Uid="StructureDialogDip" Style="{ThemeResource TextboxMandatoryField}"
                                HorizontalAlignment="Stretch"
                                InputScope="Number"
                                                                                      
                                                                                 />
                            <ComboBox x:ConnectionId='26' x:Name="StructureRelatedCombobox" x:Uid="StructureDialogRelated"
                                                                                        
                                                                                                          
                                                                                                  />

                            <RelativePanel>

                            <Border x:ConnectionId='27' x:Name="PlanarBorder"  BorderThickness="3">
                                    <Image x:ConnectionId='31' x:Name="PlanarIcon" Style="{ThemeResource ShowPlanar}"
                                    Width="75" Height="75"
                                    RenderTransformOrigin="0.5,0.5"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    Visibility="Collapsed">
                                    <Image.RenderTransform>
                                            <!--<RotateTransform  Angle="{x:Bind strucViewModel.StructAzim, Converter={StaticResource String2Number}, Mode=TwoWay}"/>-->
                                            <RotateTransform x:ConnectionId='32' x:Name="PlanarIconRotate" Angle="{Binding ElementName=StructureAzimuthNumBox, Path=Text, Converter={StaticResource String2Number}, Mode=OneWay}"/>
                                        </Image.RenderTransform> 
                                </Image>
                            </Border>

                                <!--x:Name="pa"-->

                            <Border x:ConnectionId='28' x:Name="LinearBorder" BorderThickness="3">
                                    <Image x:ConnectionId='30' x:Name="LinearIcon" Style="{ThemeResource ShowLinear}"
                                    Width="75" Height="75"
                                    RenderTransformOrigin="0.5,0.5"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    Visibility="Collapsed">
                                    <Image.RenderTransform>
                                            <!--<RotateTransform Angle="{Binding Text, ElementName=StructureAzimuthNumBox, Mode=TwoWay}"/>-->
                                            <RotateTransform Angle="{Binding ElementName=StructureAzimuthNumBox, Path=Text, Converter={StaticResource String2Number}, Mode=TwoWay}"/>
                                    </Image.RenderTransform>
                                </Image>
                            </Border>

                            <TextBlock x:ConnectionId='29' x:Name="RelateInfo" RelativePanel.RightOf="LinearBorder" RelativePanel.AlignVerticalCenterWith="LinearBorder"/>

                            </RelativePanel>


                        </GridView>


                        <Rectangle x:ConnectionId='9' Style="{StaticResource Horizontal}" x:Name="MainSeparator_01"
                            RelativePanel.Below="StructureGridView_01"
                            Fill="{ThemeResource FieldStructureColorBrush}" />

                        <GridView x:ConnectionId='10' Style="{StaticResource NonselectableGridView}" x:Name="StructureGridView_02" RelativePanel.Below="MainSeparator_01">
                            <ComboBox x:ConnectionId='22' x:Name="structMethod" x:Uid="StructureDialogMethod"
                                                                                   
                                                                                                         />
                            <ComboBox x:ConnectionId='23' x:Name="StructureFormatCombobox" x:Uid="StructureDialogFormat" Style="{ThemeResource ComboboxMandatoryField}"  
                                                                                   
                                                                                                         
                                                                                                 />
                        </GridView>

                        <Rectangle x:ConnectionId='11' Style="{StaticResource Horizontal}" x:Name="MainSeparator_02"
                            RelativePanel.Below="StructureGridView_02"
                           Fill="{ThemeResource FieldStructureColorBrush}" />

                        <GridView x:ConnectionId='12' Style="{StaticResource NonselectableGridView}" x:Name="StructureGridView_03" RelativePanel.Below="MainSeparator_02">

                            <ComboBox x:ConnectionId='17' x:Name="StructureAttitudeCombobox" x:Uid="StructureDialogAttitude"  
                                                                                     
                                                                                                           />
                            <ComboBox x:ConnectionId='18' x:Name="StructureyoungCombobox" x:Uid="StructureDialogYoung"  
                                                                                  
                                                                                                        />
                            <ComboBox x:ConnectionId='19' x:Name="StructureGenCombobox" x:Uid="StructureDialogGen"  
                                                                               
                                                                                                      />
                            <ComboBox x:ConnectionId='20' x:Name="StructureStrainCombobox" x:Uid="StructureDialogStrain"  
                                                                                   
                                                                                                         />
                            <ComboBox x:ConnectionId='21' x:Name="StructureFlatCombobox" x:Uid="StructureDialogFlat"  
                                                                                 
                                                                                                       />
                                
                        </GridView>

                        <Rectangle x:ConnectionId='13' Style="{StaticResource Horizontal}" x:Name="MainSeparator_03"
                           RelativePanel.Below="StructureGridView_03"
                           Fill="{ThemeResource FieldStructureColorBrush}" />

                        <TextBox x:ConnectionId='14' Style="{ThemeResource Notes}" x:Name="StructureFabricTextbox" x:Uid="StructureDialogFabric"
                            RelativePanel.Below="MainSeparator_03"
                                                                                     />

                        <TextBox x:ConnectionId='15' Style="{ThemeResource Notes}" x:Name="StructureSenseTextbox" x:Uid="StructureDialogSense"
                            RelativePanel.Below="StructureFabricTextbox"
                                                                                    />

                        <TextBox x:ConnectionId='16' Style="{ThemeResource Notes}" x:Name="StructureNoteTextbox" x:Uid="StructureDialogNote"
                            RelativePanel.Below="StructureSenseTextbox"
                                                                                   />

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>
</UserControl>

