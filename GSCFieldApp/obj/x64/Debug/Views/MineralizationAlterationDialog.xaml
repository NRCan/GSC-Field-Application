<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.MineralizationAlterationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:themes="using:GSCFieldApp.Themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    mc:Ignorable="d">

    <Page>

        <Page.Resources>

            <!-- Concatenated Value Template -->
            <DataTemplate x:Key="ConcatenatedValueTemplate"                                 >

                <RelativePanel x:ConnectionId='2'>
                    <TextBlock x:ConnectionId='3' Margin="5,0,0,0"
                                                 x:Name="itemNameText"
                        TextWrapping="NoWrap" />
                    <SymbolIcon x:ConnectionId='4' x:Name="ConcatValueCheck" Margin="10,0,0,0" RelativePanel.AlignRightWithPanel="True" RelativePanel.RightOf="itemNameText" Symbol="Delete" Foreground="#FF0000"                                                                     />
                </RelativePanel>

            </DataTemplate>
        </Page.Resources>

        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

            <Controls:PageHeader x:ConnectionId='5' x:Name="pageHeader" x:Uid="MineralAlterationDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" Background="{ThemeResource FieldMineralAlterationColorBrush}"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='20' x:Name="mineralAltBackButton" Icon="Clear" Foreground="White"                                       />
                    <AppBarButton x:ConnectionId='21' x:Name="mineralAltSaveButton" Icon="Save" Foreground="White"                                       />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='6' x:Name="pageFooter" Background="{ThemeResource FieldMineralAlterationColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <!--<RelativePanel Style="{StaticResource ParentPanel}" x:Name="mineralAltRelativePanel">-->
                <ScrollViewer Style="{StaticResource ParentScroll}" >
                    <RelativePanel x:ConnectionId='7' Style="{StaticResource ChildPanel}" x:Name="mineralAltScrollRelativePanel">
                        <GridView x:ConnectionId='8' Style="{StaticResource NonselectableGridView}" x:Name="MineralAltGridViewRequired">
                            <ComboBox x:ConnectionId='18' x:Name="MineralAlterationsNamesComboBox" x:Uid="MineralAltDialogMAs" Style="{ThemeResource ComboboxMandatoryField}"
                                Header="" 
                                                                                
                                                                                                       
                                                                                                                              />

                            <ComboBox x:ConnectionId='19' x:Name="MineralAlterationsMineralsComboBox" x:Uid="MineralAltDialogMinerals" Style="{ThemeResource ComboboxMandatoryField}"
                                Header="" 
                                                                                      
                                                                                                           />


                        </GridView>

                        <Rectangle x:ConnectionId='9' Style="{StaticResource Horizontal}" x:Name="MainSeparator_01"
                           RelativePanel.Below="MineralAltGridViewRequired"
                           Fill="{ThemeResource FieldMineralAlterationColorBrush}" />


                        <RelativePanel x:ConnectionId='10' x:Name="MineralAltRelPanel_Dist" RelativePanel.Below="MainSeparator_01">
                            <ComboBox x:ConnectionId='16' x:Name="MineralAltDistComboBox" x:Uid="MineralAltDist" 
                                                                                         
                                                                                                                
                                                                                                                                              />
                            <ListView x:ConnectionId='17' x:Name="MineralAltDistConcat" Style="{StaticResource ConcatenatedListView}" RelativePanel.Below="MineralAltDistComboBox"
                                                        ItemTemplate="{StaticResource ConcatenatedValueTemplate}" 
                                                                                                               />

                        </RelativePanel>

                        <ComboBox x:ConnectionId='11' x:Name="MineralAlterationsUnitComboBox" x:Uid="MineralAltDialogUnits" Style="{ThemeResource ComboboxMandatoryField}"
                                RelativePanel.Below="MineralAltRelPanel_Dist"
                                Header="" 
                                                                                  
                                                                                                        />

                        <TextBox x:ConnectionId='12' x:Name="MineralAltModeNumBox" x:Uid="MinderalAltDialogMode" RelativePanel.Below="MineralAltRelPanel_Dist"
                                HorizontalAlignment="Stretch" MinWidth="20" Width="Auto" RelativePanel.RightOf="MineralAlterationsUnitComboBox"
                                InputScope="Number" 
                                                                                                                                                             />

                        <TextBlock x:ConnectionId='13' x:Name="ModeMADynamicLabel" Margin="0,10" x:Uid="MineralAltResidualLabel"                                                                 RelativePanel.Below="MineralAlterationsUnitComboBox"/>

                        <Rectangle x:ConnectionId='14' Style="{StaticResource Horizontal}" x:Name="MainSeparator_02"
                           RelativePanel.Below="ModeMADynamicLabel"
                           Fill="{ThemeResource FieldMineralAlterationColorBrush}" />
                        
                        <TextBox x:ConnectionId='15' Style="{ThemeResource Notes}" x:Name="MineralAltNoteComboBox" x:Uid="MineralAltDialogNote"
                            RelativePanel.Below="MainSeparator_02"
                                                                                   />

                    </RelativePanel>
                </ScrollViewer>
            <!--</RelativePanel>-->
        </RelativePanel>
    </Page>
</UserControl>

