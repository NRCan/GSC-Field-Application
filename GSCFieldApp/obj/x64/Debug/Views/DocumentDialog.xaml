<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.DocumentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    xmlns:converters="using:GSCFieldApp.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--Converters-->
        <converters:BitmapSourceConverter x:ConnectionId='2' x:Name="BitmapSourceConverter"/>
        <converters:VisibilityFromBoolConverter x:ConnectionId='3' x:Name="VisibilityFromBoolConverter"/>
        <converters:VisibilityFromReverseBoolConverter x:ConnectionId='4' x:Name="VisibilityFromReverseBoolConverter"/>
    </UserControl.Resources>
    
    <Page>
        <!-- data entry -->
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


            <Controls:PageHeader x:ConnectionId='5' x:Name="pageHeader" x:Uid="DocumentDialogHeader" Text ="" BackButtonVisibility="Collapsed" CommandBarOverflowPresenterStyle="{StaticResource CommandBarOverflowPresenterStyleDocumentPage}"
                            RelativePanel.AlignLeftWithPanel="True" Background="{ThemeResource FieldPhotoColorBrush}"
                            RelativePanel.AlignRightWithPanel="True"
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='29' x:Name="documentPhotoButton" Icon="Camera" Foreground="White"                                          x:Uid="DocumentDialogSnapshot"/>
                    <AppBarSeparator Foreground="White"/>
                    <AppBarButton x:ConnectionId='30' x:Name="documentBackButton" Icon="Clear" Foreground="White"                                    x:Uid="DocumentDialogClose" />
                    <AppBarButton x:ConnectionId='31' x:Name="documentSaveButton" Icon="Save" Foreground="White"                                    x:Uid="DocumentDialogSave"/>
                    
                </Controls:PageHeader.PrimaryCommands>
                <!--<Controls:PageHeader.SecondaryCommands/>-->
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='6' x:Name="pageFooter" Background="{ThemeResource FieldPhotoColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='7' Style="{StaticResource ParentPanel}" x:Name="docRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='8' Style="{StaticResource ChildPanel}" x:Name="docScrollRelativePanel" RenderTransformOrigin="0.5,0.5">

                        <ComboBox x:ConnectionId='9' x:Name="DocumentCategoryCombobox" x:Uid="DocumentCategoryCombobox" Style="{ThemeResource ComboboxMandatoryField}"
                          RelativePanel.AlignLeftWithPanel="True"
                                                                       
                                                                                             />

                        <TextBox x:ConnectionId='10' x:Name="DocumentDirectionTextbox" x:Uid="DocumentDirectionTextbox"
                         HorizontalAlignment="Stretch"
                         MaxLength="0"
                         TextWrapping="Wrap"
                         InputScope="Number"
                         IsSpellCheckEnabled="True"
                         IsTextPredictionEnabled="True"
                         RelativePanel.RightOf="DocumentCategoryCombobox"
                                                                             />


                        <SymbolIcon x:ConnectionId='11' x:Name="DocumentDirectionSymIcon" x:Uid="DocumentDirectionIcon" 
                                    Symbol="Directions"
                                    Margin="0,0,0,5"
                                    RelativePanel.AlignBottomWith="DocumentDirectionTextbox"
                                    RelativePanel.RightOf="DocumentDirectionTextbox" RenderTransformOrigin="0.5,0.5">
                            <SymbolIcon.RenderTransform>
                                <CompositeTransform Rotation="{Binding Text, ElementName=DocumentDirectionTextbox}"/>
                            </SymbolIcon.RenderTransform>
                        </SymbolIcon>
                        
                        <TextBox x:ConnectionId='12' Style="{ThemeResource Notes}" x:Name="DocumentCaptionTextbox" x:Uid="DocumentCaptionTextbox"
                         RelativePanel.Below="DocumentCategoryCombobox" 
                                                                               />

                        <Button x:ConnectionId='13' x:Name="LoadPreviousCaptionButton" Content="Load Previous" Margin="0,10,0,0"
                            RelativePanel.Below="DocumentCaptionTextbox" 
                                                                                           />

                        <Rectangle x:ConnectionId='14' Style="{StaticResource Horizontal}" x:Name="SeperatorLine_02"
                           RelativePanel.Below="LoadPreviousCaptionButton"
                           Fill="{ThemeResource FieldPhotoColorBrush}" />

                        <GridView x:ConnectionId='15' x:Name="DocumentNameAndNumbers" RelativePanel.Below="SeperatorLine_02"                                                                                                                                   
                                  Style="{StaticResource NonselectableGridView}">

                            <ComboBox x:ConnectionId='24' x:Name="DocumentTypeCombobox" x:Uid="DocumentTypeCombobox"
                                                                          
                                                                                                 
                                                                                                            />
                            
                            <StackPanel x:ConnectionId='25' Orientation="Horizontal" x:Name="DocumentFromToBoxes">

                                <TextBox x:ConnectionId='26' x:Name="DocumentFromNumberTextbox" x:Uid="DocumentFromNoTextbox" 
                                HorizontalAlignment="Stretch" 
                                Margin="0"  Width="20"
                                                                                     
                                InputScope="Number"                                                                          />

                                <Rectangle x:ConnectionId='27' x:Name="SeperatorVertical_02" Width="2" Margin="15,10,15,0"                                                                         
                                Fill="{ThemeResource FieldPhotoColorBrush}" />

                                <TextBox x:ConnectionId='28' x:Name="DocumentToNumberTextbox" x:Uid="DocumentToNoTextbox"
                                HorizontalAlignment="Stretch" Width="45" MaxWidth="45"
                                Margin="0"                                                                         
                                                                                       
                                InputScope="Number" PlaceholderText="Must be greater"/>

                            </StackPanel>

                        </GridView>

                        <TextBox x:ConnectionId='16' x:Name="DocumentNameTextbox" x:Uid="DocumentNameTextbox" Style="{ThemeResource TextboxMandatoryField}"
                                                                                              RelativePanel.Below="DocumentNameAndNumbers"
                             HorizontalAlignment="Stretch"                                                                                                                                   
                             MaxLength="0"
                             InputScope="Text"
                                                                                />

                        <Rectangle x:ConnectionId='17' Style="{StaticResource Horizontal}" x:Name="SeperatorLine_04"
                           RelativePanel.Below="DocumentNameTextbox" RelativePanel.AlignLeftWithPanel="True"
                           Fill="{ThemeResource FieldPhotoColorBrush}" 
                                                                                        />

                        <ComboBox x:ConnectionId='18' x:Name="DocumentParentThemeCombobox" x:Uid="DocumentRelatedTableCombobox"
                              RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.Below="SeperatorLine_04"
                              Margin="0,0,0,5"
                                                                               
                                                                                                     
                                                                                                                                                                             />
                        <ComboBox x:ConnectionId='19' x:Name="DocumentParentIDCombobox" x:Uid="DocumentRelatedItemCombobox"
                              RelativePanel.Below="SeperatorLine_04"
                              Margin="10,0,0,5"
                          RelativePanel.RightOf="DocumentParentThemeCombobox"
                                                                                   
                                                                         
                                                                                              />

                        <TextBox x:ConnectionId='20' x:Name="DocumentObjectXTextbox" x:Uid="DocumentObjectXTextbox"
                         HorizontalAlignment="Stretch"
                         Margin="0,0,10,10" 
                         MaxLength="0"
                         InputScope="Digits"
                         RelativePanel.Below="DocumentParentThemeCombobox"
                         RelativePanel.AlignLeftWithPanel="True"
                         Visibility="Collapsed" />

                        <TextBox x:ConnectionId='21' x:Name="DocumentObjectYTextbox" x:Uid="DocumentObjectYTextbox"
                         HorizontalAlignment="Stretch"
                         Margin="0,0,10,10" 
                         MaxLength="0"
                         InputScope="Digits"
                         RelativePanel.Below="DocumentParentThemeCombobox"
                         RelativePanel.RightOf="DocumentObjectXTextbox"
                         Visibility="Collapsed"/>

                        <Image x:ConnectionId='22' x:Name="imagePreview"                              
                               Width="300" Height="300" Margin="0,10,10,0"                                                                                                                            
                               RelativePanel.Below="DocumentParentThemeCombobox"                                  
                               RelativePanel.AlignLeftWithPanel="True">
                            <Image.Source>
                                <BitmapImage x:ConnectionId='23' DecodePixelWidth="300"                                                                                                                   />
                            </Image.Source>
                        </Image>

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>

</UserControl>

