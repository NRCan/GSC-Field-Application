<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.FieldBookDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:local="using:GSCFieldApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    mc:Ignorable="d">

    <Page>
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


            <!-- header -->

            <Controls:PageHeader x:ConnectionId='2' x:Name="pageHeader" x:Uid="UserInfoDialogHeader" Text ="" 
                            RelativePanel.AlignLeftWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Collapsed" >

                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='21' x:Name="userInfoCancelButton" Icon="Clear" Foreground="White"                                           />
                    <AppBarButton x:ConnectionId='22' x:Name="userInfoSaveButton" Icon="Save" Foreground="White"                                   />
                </Controls:PageHeader.PrimaryCommands>
                
            </Controls:PageHeader>

            <Controls:PageHeader x:ConnectionId='3' x:Name="pageFooter"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">

            </Controls:PageHeader>


            <!-- data entry -->
            <ScrollViewer RelativePanel.Below="pageHeader" 
                      RelativePanel.Above="pageFooter" 
                      RelativePanel.AlignLeftWithPanel="True" 
                      RelativePanel.AlignRightWithPanel="True">
                <RelativePanel Style="{StaticResource ChildPanel}" >

                    <GridView x:ConnectionId='4' Style="{StaticResource NonselectableGridView}" x:Name="UserInfo_Project">
                        <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="UserInfo_ProjectHeader"/>

                        <ComboBox x:ConnectionId='19' x:Name="ProjectTypeComboBox" Width="Auto" x:Uid="UserInfoDialogWType" 
                                  Style="{ThemeResource ComboboxMandatoryField}"
                          Header=""
                                                                      
                                                                                                                                                   
                          PlaceholderText=""/>

                        <TextBox x:ConnectionId='20' x:Name="ProjectNameTextBox" x:Uid="UserInfoDialogPName"
                         Header="" RelativePanel.RightOf="ProjectTypeComboBox"
                                 Style="{ThemeResource TextboxMandatoryField}"
                                                                           />


                    </GridView>

                    <Rectangle x:ConnectionId='5' x:Name="ProjectBorder" 
                               Style="{StaticResource Horizontal}"
                           RelativePanel.Below="UserInfo_Project"
                           Fill="{ThemeResource SystemControlBackgroundAccentBrush}" />

                    <GridView x:ConnectionId='6' Style="{StaticResource NonselectableGridView}" x:Name="UserInfo_ProjectLeader" RelativePanel.Below="ProjectBorder">
                        <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="UserInfo_ProjectLeaderHeader"/>

                        <TextBox x:ConnectionId='16' x:Name="ProjectLeaderFirstNameTextBox" x:Uid="UserInfoDialogPLeaderFirstName"
                         Header="" 
                                                                               />

                        <TextBox x:ConnectionId='17' x:Name="ProjectLeaderMiddleNameTextBox" x:Uid="UserInfoDialogPLeaderMiddleName"
                         Header="" 
                                                                               />

                        <TextBox x:ConnectionId='18' x:Name="ProjectLeaderLastNameTextBox" x:Uid="UserInfoDialogPLeaderLastName"
                         Header="" 
                                                                               />

                    </GridView>

                    <Rectangle x:ConnectionId='7' x:Name="ProjectLeaderBorder" 
                               Style="{StaticResource Horizontal}"
                           RelativePanel.Below="UserInfo_ProjectLeader"
                           Fill="{ThemeResource SystemControlBackgroundAccentBrush}" />

                    <GridView x:ConnectionId='8' Style="{StaticResource NonselectableGridView}" x:Name="UserInfo_User" RelativePanel.Below="ProjectLeaderBorder">
                        <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="UserInfo_UserHeader"/>


                            
                        <TextBox x:ConnectionId='12' x:Name="ProjectGeologistFirstNameTextBox" x:Uid="UserInfoDialogPGeologistFirstName"
                        Header="" Style="{ThemeResource TextboxMandatoryField}"
                                                                          />

                        <TextBox x:ConnectionId='13' x:Name="ProjectGeologistMiddleNameTextBox" x:Uid="UserInfoDialogPGeologistMiddleName"
                        Header="" 
                                                                          />

                        <TextBox x:ConnectionId='14' x:Name="ProjectGeologistLastNameTextBox" x:Uid="UserInfoDialogPGeologistLastName"
                        Header="" Style="{ThemeResource TextboxMandatoryField}"
                                                                          />

                        <TextBox x:ConnectionId='15' x:Name="UserCodeTextBox" x:Uid="UserInfoDialogOfficerCode" 
                                    Style="{ThemeResource TextboxMandatoryField}"                                                      
                            Header="" 
                                                                                                                            />

                        
                    </GridView>

                    <Rectangle x:ConnectionId='9' x:Name="UserBorder" Style="{StaticResource Horizontal}"
                           RelativePanel.Below="UserInfo_User"
                           Fill="{ThemeResource SystemControlBackgroundAccentBrush}" />

                    <GridView x:ConnectionId='10' Style="{StaticResource NonselectableGridView}" x:Name="UserInfo_Other" RelativePanel.Below="UserBorder">
                        <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="UserInfo_OtherHeader"/>

                        <TextBox x:ConnectionId='11' x:Name="StationStartNumTextBox" x:Uid="UserInfoDialogStartStationNumber" 
                                 Style="{ThemeResource TextboxMandatoryField}"                                                      
                             Header="" InputScope="Number"
                                                                                      />

                    </GridView>

                </RelativePanel>
            </ScrollViewer>

        </RelativePanel>
    </Page>

</UserControl>

