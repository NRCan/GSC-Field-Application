<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.StationDataPart"
    x:Name="stationUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    mc:Ignorable="d" RenderTransformOrigin="0.5,0.5">

    <!-- data entry -->
    <Page>
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


            <Controls:PageHeader x:ConnectionId='2' x:Name="pageHeader" x:Uid="FieldworkTableStation" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" Background="{ThemeResource FieldStationColorBrush}"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='15' x:Name="stationBackButton" Icon="Clear" Foreground="White"                                  />
                    <AppBarButton x:ConnectionId='16' x:Name="stationSaveButton" Icon="Save" Foreground="White"                                  />
                </Controls:PageHeader.PrimaryCommands>

                <Controls:PageHeader.SecondaryCommands>
                    <!--AppBarButton x:Name="stationSameAsLast" Label="Same as last"/-->
                    <!--AppBarButton x:Name="stationAddFavorite" Label="Add to Favorite"/-->
                </Controls:PageHeader.SecondaryCommands>

            </Controls:PageHeader>

            <Controls:PageHeader x:ConnectionId='3' x:Name="pageFooter" Background="{ThemeResource FieldStationColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">


            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='4' Style="{StaticResource ParentPanel}" x:Name="obsRelativePanel">
                <ScrollViewer Style="{StaticResource VerticalScroll}">
                    <RelativePanel x:ConnectionId='5' Style="{StaticResource ChildPanel}" x:Name="obsScrollRelativePanel">

                        <GridView x:ConnectionId='6' Style="{StaticResource NonselectableGridView}" x:Name="StationGridView">

                            <ComboBox x:ConnectionId='9' x:Name="StationObsTypeCombox" x:Uid="FieldworkTableStationOCType" Style="{ThemeResource ComboboxMandatoryField}"
                          Header=""                                                      
                                                                        
                                                                                              
                          RelativePanel.AlignLeftWithPanel="True" 
                            MinWidth="175"/>

                            <ComboBox x:ConnectionId='10' x:Name="StationQualityComboBox" x:Uid="FieldworkTableStationOCQual"
                          Header=""                                                      
                                                                         
                                                                                                
                          RelativePanel.RightOf="StationObsTypeCombox" />

                            <ComboBox x:ConnectionId='11' x:Name="StationPhysEnvCombobox" x:Uid="FieldworkTableStationPhysEnv"
                          Header=""                                                       
                                                                         
                                                                                                
                          RelativePanel.RightOf="StationQualityComboBox" />

                            <TextBox x:ConnectionId='12' x:Name="StationSizeTextBox" x:Uid="FieldworkTableStationOCSize"
                                                                                 
                             Header=""                                                      
                             InputScope="Text"
                             IsSpellCheckEnabled="True"
                             IsTextPredictionEnabled="True"
                             RelativePanel.RightOf="StationPhysEnvCombobox"/>

                            <TextBox x:ConnectionId='13' x:Name="StationAirPhoto" x:Uid="FieldworkTableStationAirNo"
                            Header="" InputScope="Text" 
                            RelativePanel.RightOf="StationSizeTextBox"
                                                                            />

                            <TextBox x:ConnectionId='14' x:Name="StationTraverseNo" x:Uid="FieldworkTableStationTravNo"
                            Header="" InputScope="Number"
                            RelativePanel.RightOf="StationAirPhoto"
                                                                              />

                        </GridView>

                        <TextBox x:ConnectionId='7' Style="{ThemeResource Notes}" x:Name="NoteTextBox" x:Uid="FieldworkTableStationFieldNotes"
                            RelativePanel.Below="StationGridView"
                                                                                                               />

                        <TextBox x:ConnectionId='8' Style="{ThemeResource Notes}" x:Name="SLSNoteTextbox" x:Uid="FieldworkTableStationSLSNotes"
                             RelativePanel.Below="NoteTextBox"                                                       
                                                                             />
                        <!--<Image x:Name="mosquito" Height="60" Width="60" Source="ms-appx:///Assets/mosquito.png"
                               Visibility="Collapsed" />-->

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>
        </RelativePanel>
    </Page>


</UserControl>

