<Page x:ConnectionId='1' x:Class="GSCFieldApp.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:controls="using:Template10.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels" mc:Ignorable="d">

    <Page.DataContext>
        <vm:SettingsPageViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </Page.DataContext>
    
   
    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='3' x:Name="AdaptiveVisualStateGroup">
                <VisualState x:ConnectionId='4' x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='6' x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--  header  -->
        <controls:PageHeader x:ConnectionId='7' x:Name="pageHeader" Content="" x:Uid="SettingPageHeader"
                                                    EllipsisVisibility="Visible"
                             RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True" >
            <controls:PageHeader.PrimaryCommands>
                <AppBarButton x:ConnectionId='50' x:Name="settingLoadPicklistButton" x:Uid="SettingPagePicklistButton"
                              Icon="Download" Foreground="White"                                                                                                                                      />
            </controls:PageHeader.PrimaryCommands>
            <controls:PageHeader.SecondaryCommands/>
        </controls:PageHeader>

            <!--  content  -->
        <Pivot x:ConnectionId='8' x:Name="settingPivot" Grid.Row="1" 
               RelativePanel.AlignBottomWithPanel="True"
               RelativePanel.AlignLeftWithPanel="True" 
               RelativePanel.AlignRightWithPanel="True"                                                                   
               RelativePanel.Below="pageHeader"                                                               >

            <!--  customize  tables-->
            <PivotItem x:ConnectionId='9' DataContext="{Binding SettingsPartViewModel}" x:Uid="SettingPagePivotCustomize" x:Name="settingPivotNotes"
                       Padding="0">
                <ScrollViewer Margin="0,0,-12,0" VerticalScrollBarVisibility="Auto">
                    <RelativePanel x:ConnectionId='35' x:Name="TableVisibilityRelPanel_00">

                        <RelativePanel x:ConnectionId='36' x:Name="TableVisibilityRelPanel_01" RelativePanel.AlignTopWithPanel="True"
                                       Margin="0,0,0,20">

                            <TextBlock x:ConnectionId='37' x:Name="NoteTableVisibilityTextBlock" Margin="0,12,0,12" x:Uid="NoteTableVisibilityText"
                               FontSize="22" RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.AlignTopWithPanel="True"
                               Text="" />

                            <GridView x:ConnectionId='38' Style="{StaticResource NonselectableGridView}" x:Name="CommonTogglesGridView" RelativePanel.Below="NoteTableVisibilityTextBlock">
                                <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" 
                                                    FontWeight="Normal" x:Uid="SettingPageToggleCommonHeader"/>

                                <ToggleSwitch x:ConnectionId='46' x:Name="EarthToggleSwitch" x:Uid="SettingPageToggleEarth"                                                  
                                                                                                 OffContent="" OnContent="" />

                                <ToggleSwitch x:ConnectionId='47' x:Name="FossilToggleSwitch" x:Uid="SettingPageToggleFossil"                                                    
                                OffContent="" OnContent="" />

                                <ToggleSwitch x:ConnectionId='48' x:Name="PhotoToggleSwitch" x:Uid="SettingPageTogglePhoto"
                                                                                                 OffContent="" OnContent="" />

                                <ToggleSwitch x:ConnectionId='49' x:Name="SampleToggleSwitch" x:Uid="SettingPageToggleSample" 
                                                                                              OffContent="" OnContent="" />
                            </GridView>

                            <GridView x:ConnectionId='39' Style="{StaticResource NonselectableGridView}" x:Name="BedrockTogglesGridView" RelativePanel.Below="CommonTogglesGridView">
                                <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" 
                                                    FontWeight="Normal" x:Uid="SettingPageToggleBedrockHeader"/>
                                <ToggleSwitch x:ConnectionId='43' x:Name="MineralToggleSwitch" x:Uid="SettingPageToggleMin"                                                     
                                                OffContent="" OnContent="" />
                                <ToggleSwitch x:ConnectionId='44' x:Name="MineralAlterationToggleSwitch" x:Uid="SettingPageToggleMA"                                                
                                                OffContent="" OnContent=""/>

                                <ToggleSwitch x:ConnectionId='45' x:Name="StructureToggleSwitch" x:Uid="SettingPageToggleStruc"                                                       
                                                OffContent="" OnContent=""/>

                            </GridView>

                            <GridView x:ConnectionId='40' Style="{StaticResource NonselectableGridView}" x:Name="SurficialTogglesGridView" RelativePanel.Below="BedrockTogglesGridView">
                                <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="SettingPageToggleSurficialHeader"
                                                    FontWeight="Normal"/>

                                <ToggleSwitch x:ConnectionId='41' x:Name="PaleoflowToggleSwitch" x:Uid="SettingPageTogglePflow"                                                   
                                    OffContent="" OnContent="" />
                                <ToggleSwitch x:ConnectionId='42' x:Name="SurficialToggleSwitch" x:Uid="SettingPageToggleSurficial" Visibility="Collapsed"
                                    OffContent="" OnContent=""                                                       />

                            </GridView>

                        </RelativePanel>

                    </RelativePanel>
                </ScrollViewer>
            </PivotItem>


            <!--  customize  picklist-->
            <PivotItem x:ConnectionId='10' DataContext="{Binding SettingsPartViewModel}" x:Uid="SettingPagePivotCustomizePicklist" x:Name="settingPivotPicklist"
                       Padding="0">
                <ScrollViewer Margin="0,0,-12,0" VerticalScrollBarVisibility="Auto">
                    <RelativePanel>
                        <GridView Foreground="Black" >
                            <Button x:ConnectionId='26' x:Name="StationThemeList" FontWeight="Bold" x:Uid="SettingPageVocabStation" Height="100" Width="100"  Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldStationColor}"/>
                                </Button.Background>
                            </Button>
                            <Button x:ConnectionId='27' x:Name="Earth_materialThemeList" FontWeight="Bold" x:Uid="SettingPageVocabEarthmat" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldEarthMaterialColor}"/>
                                </Button.Background>
                            </Button>

                            <Button x:ConnectionId='28' x:Name="SampleAThemeList" FontWeight="Bold" x:Uid="SettingPageVocabSample" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldSampleColor}"/>
                                </Button.Background>
                            </Button>
                            <Button x:ConnectionId='29' x:Name="StructureThemeList" FontWeight="Bold" x:Uid="SettingPageVocabStructure" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldStrucColor}"/>
                                </Button.Background>
                            </Button>
                            <Button x:ConnectionId='30' x:Name="FossilThemeList" FontWeight="Bold" x:Uid="SettingPageVocabFossil" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldFossilColor}"/>
                                </Button.Background>
                            </Button>
                            <Button x:ConnectionId='31' x:Name="Paleo_flowThemeList" FontWeight="Bold" x:Uid="SettingPageVocabPflow" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldPflowColor}"/>
                                </Button.Background>
                            </Button>

                            <Button x:ConnectionId='32' x:Name="MineralThemeList" FontWeight="Bold" x:Uid="SettingPageVocabMineral" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldMineralColor}"/>
                                </Button.Background>
                            </Button>

                            <Button x:ConnectionId='33' x:Name="AlterationThemeList" FontWeight="Bold" x:Uid="SettingPageVocabMA" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldMineralAlterationColor}"/>
                                </Button.Background>
                            </Button>

                            <Button x:ConnectionId='34' x:Name="DocumentThemeList" FontWeight="Bold" x:Uid="SettingPageVocabPhoto" Height="100" Width="100" Margin="5"                          >
                                <Button.Background>
                                    <SolidColorBrush Color="{ThemeResource FieldPhotoColor}"/>
                                </Button.Background>
                            </Button>



                        </GridView>

                    </RelativePanel>
                </ScrollViewer>
            </PivotItem>

            <!--  Themes  -->
            <PivotItem x:ConnectionId='11' DataContext="{Binding SettingsPartViewModel}" Header="" x:Uid="SettingPagePivotSetting" x:Name="settingPivotThemes">
                <RelativePanel HorizontalAlignment="Left">

                    <GridView x:ConnectionId='22' Style="{StaticResource NonselectableGridView}" x:Name="ThemeGridView_01">
                        <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" 
                                            FontWeight="Normal" x:Uid="SettingPagePivotSetting_Colour"/>

                        <ToggleSwitch x:ConnectionId='25' x:Name="UseLightThemeToggleSwitch" Header="" x:Uid="SettingPageToggleTheme"
                                    IsOn="{Binding UseLightThemeButton, Mode=TwoWay}"
                                    OffContent="" OnContent=""
                                    RelativePanel.AlignLeftWithPanel="True" />
                    </GridView>


                    <GridView x:ConnectionId='23' Style="{StaticResource NonselectableGridView}" x:Name="ThemeGridView_02" RelativePanel.Below="ThemeGridView_01">
                        <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" 
                                            FontWeight="Normal" x:Uid="SettingPagePivotSetting_Tables"/>

                        <ToggleSwitch x:ConnectionId='24' x:Name="UsePhotoModeDialogToggleSwitch" Header="" x:Uid="SettingPageTogglePhotoMode"
                                    IsOn="{Binding UsePhotoModeDialogButton, Mode=TwoWay}"
                                    OffContent="" OnContent=""
                                    RelativePanel.AlignLeftWithPanel="True" />
                    </GridView>

                </RelativePanel>

            </PivotItem>

            <!--  about  -->
            <PivotItem x:ConnectionId='12' Header=""  x:Uid="SettingPagePivotAbout" x:Name="settingPivotAbout">
                <RelativePanel DataContext="{Binding AboutPartViewModel}">
                    <GridView x:ConnectionId='13' x:Name="LogoImage"                                                      HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True">
                        <Border BorderBrush="DimGray" BorderThickness="1" IsHitTestVisible="False">
                            <Border.Background>
                                <SolidColorBrush Color="{ThemeResource SystemAccentColor}" />
                            </Border.Background>
                            <Image Margin="12" Source="{Binding Logo}"
                               Stretch="None"  />
                        </Border>
                    </GridView>

                    <!--App. Info-->
                    <TextBlock x:ConnectionId='14' x:Name="DisplayNameTextBlock" Margin="0,0,0,12"
                               FontSize="22" RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.AlignRightWith="LogoImage"
                               RelativePanel.AlignTopWithPanel="True"
                               Text="{Binding DisplayName}" />

                    <TextBlock x:ConnectionId='15' x:Name="PublisherTextBlock"
                               RelativePanel.AlignLeftWithPanel="True" TextWrapping="Wrap" RelativePanel.LeftOf="LogoImage"
                               RelativePanel.Below="DisplayNameTextBlock"
                               Text="{Binding Publisher}" />

                    <TextBlock x:ConnectionId='16' x:Name="VersionTextBlock"
                               RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.Below="PublisherTextBlock">
                        <Run>Version</Run>
                        <Run Text="{Binding Version}" />
                    </TextBlock>

                    <!--Contact Info-->
                    <TextBlock x:ConnectionId='17' x:Name="ContactTextBlock" Margin="0,12,0,12" x:Uid="AboutContactHeader"
                               FontSize="22" RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.Below="VersionTextBlock"
                               Text="" />

                    <TextBlock x:ConnectionId='18' x:Name="ContactInfoTextBlock" x:Uid="AboutContactInfo"
                               RelativePanel.AlignLeftWithPanel="True" TextWrapping="Wrap"
                               RelativePanel.Below="ContactTextBlock"
                               Text="" />
                    
                    <!--Team Info-->
                    <TextBlock x:ConnectionId='19' x:Name="TeamTextBlock" Margin="0,12,0,12" x:Uid="AboutTeamHeader"
                               FontSize="22" RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.Below="ContactInfoTextBlock"
                               Text="" />

                    <TextBlock x:ConnectionId='20' x:Name="TeamInfoTextBlock" x:Uid="AboutTeamInfo"
                               RelativePanel.AlignLeftWithPanel="True" TextWrapping="Wrap"
                               RelativePanel.Below="TeamTextBlock"
                               Text=""                                     />

                    <Image x:ConnectionId='21' RelativePanel.AlignLeftWithPanel="True" x:Name="AboutTeamPicture"
                           RelativePanel.AlignBottomWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.AlignTopWithPanel="True"
                           Visibility="Collapsed"                                  Source="ms-appx:///Assets/Team.png"/>

                </RelativePanel>
            </PivotItem>
        </Pivot>

    </RelativePanel>

</Page>


