<UserControl x:ConnectionId='1'
    x:Class="GSCFieldApp.Views.EarthmatDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:GSCFieldApp.Views"
    xmlns:theme="using:GSCFieldApp"
    xmlns:themes="using:GSCFieldApp.Themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GSCFieldApp.ViewModels"
    xmlns:Controls="using:Template10.Controls"
    xmlns:converters="using:GSCFieldApp.Converters"
    mc:Ignorable="d">


    <!--<UserControl.Resources>
        <converters:SecondOrderPicklistConverter x:Name="SecondOrderPicklistConverter" />
    </UserControl.Resources>-->

    <!-- data entry -->
    <Page>

        <Page.Resources>

            <!-- Concatenated Value Template -->
            <DataTemplate x:Key="ConcatenatedValueTemplate"                                 >

                <RelativePanel x:ConnectionId='2'>
                    <TextBlock x:ConnectionId='3' Margin="5,0,0,0"
                                                 x:Name="itemNameText"
                        TextWrapping="NoWrap" />
                    <SymbolIcon x:ConnectionId='4' x:Name="ConcatValueCheck" Margin="10,0,0,0" RelativePanel.AlignRightWithPanel="True" RelativePanel.RightOf="itemNameText" Symbol="Delete" Foreground="#FF0000"                                                                     />
                </RelativePanel>

            </DataTemplate>
        </Page.Resources>

        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">


            <Controls:PageHeader x:ConnectionId='5' x:Name="pageHeader" x:Uid="EarthDialogHeader" Text ="" BackButtonVisibility="Collapsed"
                            RelativePanel.AlignLeftWithPanel="True" Background="{ThemeResource FieldEarthMatColorBrush}"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"  
                            EllipsisVisibility="Visible" >
                <Controls:PageHeader.PrimaryCommands>
                    <AppBarButton x:ConnectionId='64' x:Name="earthmatBackButton" Icon="Clear" Foreground="White"                                    />
                    <AppBarButton x:ConnectionId='65' x:Name="earthmatSaveButton" Icon="Save" Foreground="White"                                    />
                </Controls:PageHeader.PrimaryCommands>
                <Controls:PageHeader.SecondaryCommands/>
            </Controls:PageHeader>
            <Controls:PageHeader x:ConnectionId='6' x:Name="pageFooter" Background="{ThemeResource FieldEarthMatColorBrush}"
                             RelativePanel.AlignBottomWithPanel="True" 
                             EllipsisVisibility="Collapsed" RelativePanel.AlignRightWithPanel="True" 
                             RelativePanel.AlignLeftWithPanel="True">
            </Controls:PageHeader>

            <RelativePanel x:ConnectionId='7' Style="{StaticResource ParentPanel}" x:Name="earthRelativePanel" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                <ScrollViewer Style="{StaticResource VerticalScroll}" >
                    <RelativePanel x:ConnectionId='8' Style="{StaticResource ChildPanel}" x:Name="earthScrollRelativePanel" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">

                        <GridView x:ConnectionId='9' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Litho">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Lithology"/>

                            <RelativePanel>

                                <Button x:ConnectionId='60' x:Name="EarthLithoSearch" Margin="0,28,10,0" Width="35" Height="30" Background="#00000000"                               >
                                    <SymbolIcon x:ConnectionId='63' x:Name="SearchLitho" Symbol="Zoom" Margin="-17.667,-15,-17.333,-15"/>
                                </Button>

                                <AutoSuggestBox x:ConnectionId='61' x:Name="EarthLithAutoSuggest" x:Uid="EarthLithAutoSuggest"
                                                RelativePanel.RightOf="EarthLithoSearch"
                                                RelativePanel.AlignBottomWith="EarthLithoSearch"
                                                                                              
                                                                                                    
                                                Width="300"/>

                                <TextBox x:ConnectionId='62' x:Name="EarthLitho" Header="" RelativePanel.RightOf="EarthLithoSearch" x:Uid="EarthDialogType" Width="Auto"
                                                                                                  Style="{ThemeResource TextboxMandatoryField}"
                                         RelativePanel.Below="EarthLithoSearch" IsReadOnly="True" FontWeight="Bold" />

                            </RelativePanel>

                        </GridView>

                        <Rectangle x:ConnectionId='10' Style="{StaticResource Horizontal}" x:Name="MainSeparator_01" RelativePanel.Below="EarthmatGridView_Litho"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='11' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Details" RelativePanel.Below="MainSeparator_01">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Details"/>

                            <RelativePanel x:ConnectionId='42' x:Name="detailRelPanel_Struc">
                                <ComboBox x:ConnectionId='58' x:Name="EarthModStrucComboBox" x:Uid="EarthDialoghModStruc"
                                                                                 
                                                                                                        
                                                                                                                     />
                                <ListView x:ConnectionId='59' x:Name="EarthModStrucConcat" Style="{StaticResource ConcatenatedListView}" RelativePanel.Below="EarthModStrucComboBox"
                                                ItemTemplate="{StaticResource ConcatenatedValueTemplate}" Height="136" 
                                                                                                       />
                            </RelativePanel>
                            <RelativePanel x:ConnectionId='43' x:Name="detailRelPanel_Text">
                                <ComboBox x:ConnectionId='56' x:Name="EarthModTextureCombobox" Width="Auto" x:Uid="EarthDialogModText" 
                                                                                           
                                                                                                                  
                                                                                                                             />
                                <ListView x:ConnectionId='57' x:Name="EarthModTextureConcat" Style="{StaticResource ConcatenatedListView}" RelativePanel.Below="EarthModTextureCombobox"
                                                        ItemTemplate="{StaticResource ConcatenatedValueTemplate}" Height="136" 
                                                                                                                 />

                            </RelativePanel>
                            
                            <RelativePanel x:ConnectionId='44' x:Name="detailRelPanel_Comp">
                                <ComboBox x:ConnectionId='54' x:Name="EarthModCompComboBox" x:Uid="EarthDialogModComp" 
                                                                                        
                                                                                                               
                                                                                                                             />
                                <ListView x:ConnectionId='55' x:Name="EarthModCompConcat" Style="{StaticResource ConcatenatedListView}" RelativePanel.Below="EarthModCompComboBox"
                                                        ItemTemplate="{StaticResource ConcatenatedValueTemplate}" Height="136" 
                                                                                                              />

                            </RelativePanel>

                            <RelativePanel x:ConnectionId='45' x:Name="detailRelPanel_GrnSize" >
                                <ComboBox x:ConnectionId='52' x:Name="EarthGrCrySizeComboBox" x:Uid="EarthDialogGrSize"
                                                                                
                                                                                                      
                                                                                                                     />
                                <ListView x:ConnectionId='53' x:Name="EarthGrCrySizeConcat" Style="{StaticResource ConcatenatedListView}"
                                                RelativePanel.Below="EarthGrCrySizeComboBox" Height="136" 
                                                ItemTemplate="{StaticResource ConcatenatedValueTemplate}" 
                                                                                                     />
                            </RelativePanel>

                            <RelativePanel x:ConnectionId='46' x:Name="detailRelPanel_Thick">
                                <ComboBox x:ConnectionId='50' x:Name="EarthBedThickComboBox" x:Uid="EarthDialogBedThick"
                                                                                   
                                                                                                        
                                                                                                                     />
                                <ListView x:ConnectionId='51' x:Name="EarthBedthickConcat" Style="{StaticResource ConcatenatedListView}"
                                                RelativePanel.Below="EarthBedThickComboBox" Height="136" 
                                                ItemTemplate="{StaticResource ConcatenatedValueTemplate}" 
                                                                                                       />
                            </RelativePanel>

                            <RelativePanel x:ConnectionId='47' x:Name="detailRelPanel_DefFabric">
                                <ComboBox x:ConnectionId='48' x:Name="EarthDefFabricCombobox" x:Uid="EarthDialogDefabric"
                                                                                   
                                                                                                         
                                                                                                                     />
                                <ListView x:ConnectionId='49' x:Name="EarthDefFabricConcat" Style="{StaticResource ConcatenatedListView}"
                                                RelativePanel.Below="EarthDefFabricCombobox" Height="136" 
                                                ItemTemplate="{StaticResource ConcatenatedValueTemplate}" 
                                                                                                        />
                            </RelativePanel>


                            
                        </GridView>

                        <Rectangle x:ConnectionId='12' Style="{StaticResource Horizontal}" x:Name="MainSeparator_01b" RelativePanel.Below="EarthmatGridView_Details"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='13' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Carto" RelativePanel.Below="MainSeparator_01b">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Cartography"/>
                            <RelativePanel x:ConnectionId='39' x:Name="detailRelPanel_MU_Occur">
                                <ComboBox x:ConnectionId='40' x:Name="EarthMUCombobox" Width="Auto" x:Uid="EarthDialogMU" Header=""
                                                                                
                                                                                                      />
                                <ComboBox x:ConnectionId='41' x:Name="EarthOccurComboBox" Width="Auto" x:Uid="EarthDialogOccur" Header="" 
                                                                                     RelativePanel.RightOf="EarthMUCombobox"
                                                                                                           />
                            </RelativePanel>
                        </GridView>

                        <Rectangle x:ConnectionId='14' Style="{StaticResource Horizontal}" x:Name="MainSeparator_02" RelativePanel.Below="EarthmatGridView_Carto"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='15' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Mineral" RelativePanel.Below="MainSeparator_02">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Mineralogy"/>

                            <RelativePanel>
                                <ComboBox x:ConnectionId='37' x:Name="EarthMineralCombobox" x:Uid="EarthDialogMineral"
                                                                            
                                                                                                   
                                                                                                                 />
                                <ListView x:ConnectionId='38' x:Name="EarthMineralConcat" Style="{StaticResource ConcatenatedListView}" RelativePanel.Below="EarthMineralCombobox"
                                            ItemTemplate="{StaticResource ConcatenatedValueTemplate}" Height="136" 
                                                                                                  />
                            </RelativePanel>

                        </GridView>

                        <Rectangle x:ConnectionId='16' Style="{StaticResource Horizontal}" x:Name="MainSeparator_03" RelativePanel.Below="EarthmatGridView_Mineral"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='17' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Contact" RelativePanel.Below="MainSeparator_03">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Contact"/>

                            <RelativePanel>
                                <ComboBox x:ConnectionId='34' x:Name="EarthContactUpCombobox" Width="Auto" x:Uid="EarthDialogContactUp" Header="" 
                                                                        
                                                                                              />

                                <ComboBox x:ConnectionId='35' x:Name="EarthContactLowComboBox" Width="Auto" x:Uid="EarthDialogContactLow" Header=""
                                                                        RelativePanel.RightOf="EarthContactUpCombobox"
                                                                                              />

                                <TextBox x:ConnectionId='36' Style="{ThemeResource Notes}" x:Name="EarthContactNoteComboBox" x:Uid="EarthDialogContactNote"
                                        RelativePanel.Below="EarthContactUpCombobox"
                                                                                           />
                            </RelativePanel>


                        </GridView>

                        <Rectangle x:ConnectionId='18' Style="{StaticResource Horizontal}" x:Name="MainSeparator_04" RelativePanel.Below="EarthmatGridView_Contact"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='19' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Colour" RelativePanel.Below="MainSeparator_04">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Colour"/>

                            <ComboBox x:ConnectionId='31' x:Name="EarthColourFCombobox" x:Uid="EarthDialogColourF"
                                                                                 
                                                                                                       />
                            <ComboBox x:ConnectionId='32' x:Name="EarthColourWComboBox" x:Uid="EarthDialogColourW"
                                                                                 
                                                                                                       />

                            <TextBox x:ConnectionId='33' x:Name="EarthColourIndexComboBox" x:Uid="EarthDialogColourInd" MinWidth="35" HorizontalAlignment="Stretch"
                                                                                   InputScope="Number"/>
                        </GridView>

                        <Rectangle x:ConnectionId='20' Style="{StaticResource Horizontal}" x:Name="MainSeparator_05" RelativePanel.Below="EarthmatGridView_Colour"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='21' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Mag" RelativePanel.Below="MainSeparator_05">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Mag"/>

                            <TextBox x:ConnectionId='30' x:Name="EarthMagCombobox" x:Uid="EarthDialogMag"
                                                                                            
                                      />
                        </GridView>

                        <Rectangle x:ConnectionId='22' Style="{StaticResource Horizontal}" x:Name="MainSeparator_06" RelativePanel.Below="EarthmatGridView_Mag"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='23' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_Interp" RelativePanel.Below="MainSeparator_06" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_Interpretation"/>
                        </GridView>

                        <RelativePanel x:ConnectionId='24' Margin="0,-60,0,0" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="EarthmatGridView_Interp" x:Name="EarthmatInterRelativePanel">
                            <ComboBox x:ConnectionId='28' x:Name="EarthInterpConfComboBox" x:Uid="EarthDialogInterpConf"
                                                                                                 
                                                                                                                       
                                        />
                            <TextBox x:ConnectionId='29' Style="{StaticResource Notes}" x:Name="EarthInterpComboBox" x:Uid="EarthDialogInterp"
                                                                                              
                                     RelativePanel.Below="EarthInterpConfComboBox"/>
                        </RelativePanel>

                        <Rectangle x:ConnectionId='25' Style="{StaticResource Horizontal}" x:Name="MainSeparator_07" RelativePanel.Below="EarthmatInterRelativePanel"
                           Fill="{ThemeResource FieldEarthMatColorBrush}" />

                        <GridView x:ConnectionId='26' Style="{StaticResource NonselectableGridView}" x:Name="EarthmatGridView_GeneralNote" RelativePanel.Below="MainSeparator_07" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                            <GridViewHeaderItem Style="{StaticResource NonSelectableGridViewHeader}" Content="" x:Uid="EarthmatGridView_GNote"/>
                        </GridView>

                        <RelativePanel Margin="0,-60,0,0" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="EarthmatGridView_GeneralNote">
                            <TextBox x:ConnectionId='27' Style="{StaticResource Notes}" x:Name="EarthNoteTextbox" x:Uid="EarthDialogGeneralNote"
                                                                                 />
                        </RelativePanel>

                    </RelativePanel>
                </ScrollViewer>
            </RelativePanel>


        </RelativePanel>
    </Page>
</UserControl>

